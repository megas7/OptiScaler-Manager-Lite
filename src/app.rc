#include <windows.h>
#include "resource.h"

IDC_MAINMENU MENU
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&Rescan", IDM_FILE_RESCAN
        MENUITEM "E&xit", IDM_FILE_EXIT
    END
    POPUP "&Tools"
    BEGIN
        MENUITEM "&Settings...", IDM_TOOLS_SETTINGS
        MENUITEM "Refresh &Compatibility List", IDM_TOOLS_REFRESH_COMPAT
    END
    POPUP "&Help"
    BEGIN
        MENUITEM "Open &Logs Folder", IDM_HELP_LOGS
    END
END

